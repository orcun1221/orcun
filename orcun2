using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Data.OleDb;
namespace _10._04._2017
{
    public partial class Form1 : Form
    {
        OleDbConnection con;
        OleDbDataReader dr;
        OleDbCommand cmd;
        public Form1()
        {
            InitializeComponent();
        }

        private void btngiris_Click(object sender, EventArgs e)
        {
            string ad = tbad.Text;
            string sifre = tbpass.Text;
            con=new OleDbConnection ("Provider=Microsoft.ACE.OLEDB.12.0;Data Source=kullanıcı21.accdb");
            cmd = new OleDbCommand();
            con.Open();
            cmd.Connection = con;
            cmd.CommandText = "select * from uye where kullaniciadi='" + tbad.Text + "' and pass='" + tbpass.Text + "'";
            dr = cmd.ExecuteReader();
            if (dr.Read())
            {
                Form2 f2 = new Form2();
                f2.Show();
                Close();
            }
            else
            {
                MessageBox.Show("kullanıcı adı veya sifre hatalı");
                Application.Exit();

            }
            con.Close();
        }
    }
}
